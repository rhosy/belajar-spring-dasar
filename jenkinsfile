pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Build stage'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploy stage'
            }
        }
    }
    post {
        always {
            echo "Hellooo ..."
        }
        success {
            echo "Yeee Success ..."
        }
        failure {
            echo "Oooppss! Error ..."
        }
    }
}
