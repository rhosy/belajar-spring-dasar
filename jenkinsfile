pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
    }
    post {
        always {
            echo "Hellooo ..."
        }
        success {
            echo "Yeee Success ..."
        }
        failure {
            echo "Oooppss! Error ..."
        }
    }
}
